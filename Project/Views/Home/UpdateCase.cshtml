@model Project.Models.Case

@{
    ViewBag.Title = "UpdateCase";
}
<h2>Update Your Case</h2>
<h3>@ViewBag.Message</h3>

@using (Html.BeginForm("UpdateCase", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.CaseID)
    <div class="form-group">
        @Html.Label("Case Title:", new { @class = "control-label col-md-2" })
        <div class="col-lg-6 col-md-6">
            @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("When your symptoms began?", new { @class = "control-label col-md-2" })
        <div class="col-lg-6 col-md-6">
            @Html.TextBoxFor(model => model.SymptomsBegan, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SymptomsBegan, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Your current medications:", new { @class = "control-label col-md-2" })
        <div class="col-lg-6 col-md-6">
            @Html.TextAreaFor(model => model.CurrentMedications, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CurrentMedications, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Effected body systems:", new { @class = "control-label col-md-2" })
        <div class="col-lg-6 col-md-6">
            @Html.TextAreaFor(model => model.BodySystemsAffected, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.BodySystemsAffected, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Symptoms in detail:", new { @class = "control-label col-md-2" })
        <div class="col-lg-6 col-md-6">
            @Html.TextAreaFor(model => model.SymptomsDetail, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SymptomsDetail, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Your medical history:", new { @class = "control-label col-md-2" })
        <div class="col-lg-6 col-md-6">
            @Html.TextAreaFor(model => model.MedicalHistory, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MedicalHistory, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Personal struggles:", new { @class = "control-label col-md-2" })
        <div class="col-lg-6 col-md-6">
            @Html.TextAreaFor(model => model.PersonalStruggle, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PersonalStruggle, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button class="btn btn-success" type="submit">Save Changes</button>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Home", "Index")
</div>
