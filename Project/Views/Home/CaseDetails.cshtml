
@{
    ViewBag.Title = "Case Details";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>
<hr />
<div class="row">
    @foreach (var item in Model)
    {
    <div class="col-lg-12">
        <h2>@item.Title</h2>
        <div class="row mt-3 pb-3">
            <div class="col-md-4 col-lg-3 mx-auto mt-3">
                <h4>Symptoms Began</h4>
                <p class="text-justify">
                    @item.SymptomsBegan.ToLongDateString()
                </p>
                <h4>Current Medications</h4>
                <p class="text-justify">
                    @item.CurrentMedications
                </p>

            </div>
            <div class="col-md-4 col-lg-3 mx-auto mt-3">
                <h4>Body Systems Affected</h4>
                <p class="text-justify">
                    @item.BodySystemsAffected
                </p>
                <h4>Symptoms Detail</h4>
                <p class="text-justify">
                    @item.SymptomsDetail
                </p>
            </div>
            <div class="col-md-4 col-lg-3 mx-auto mt-3">
                <h4>Medical History</h4>
                <p class="text-justify">
                    @item.MedicalHistory
                </p>
                <h4>Personal Struggle</h4>
                <p class="text-justify">
                    @item.PersonalStruggle
                </p>
            </div>
        </div>
        <p>
            <i>@item.User</i> updated this case at <i>@item.PostedDate.ToLongDateString()</i>
        </p>
        <a class="btn btn-outline-success" href="@Url.Action("Comment", "Home", new { id = item.CaseID }, null)" role="button">Help Patient</a>
        <a class="btn btn-outline-info" href="@Url.Action("Comments", "Home", new { id = item.CaseID }, null)" role="button">See Advices</a>
    </div>
     }
</div>

<div class="my-4">
    @Html.ActionLink("Back to Home", "Index") | 
    @Html.ActionLink("Return to Cases", "AllCases")
</div>
